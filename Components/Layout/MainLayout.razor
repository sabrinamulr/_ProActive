@* File: Components/Layout/MainLayout.razor *@
@inherits LayoutComponentBase
@using ProActive2508.Components


<HeadContent>
    <!-- Bootstrap CSS via CDN: verhindert 404 auf lokale Datei -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
</HeadContent>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <p></p>

            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized Context="ctx">
                        <span class="me-2">Hello, @ctx.User?.Identity?.Name!</span>

                        @* Logout per klassischem POST auf /auth/logout (setzt Cookie serverseitig) *@
                        <form method="post"
                              action="/auth/logout"
                              @formname="logout"
                              class="d-inline">
                            <AntiforgeryToken />
                            <button type="submit"
                                    class="btn btn-link p-0 align-baseline">
                                Logout
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/auth/login">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>

            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
