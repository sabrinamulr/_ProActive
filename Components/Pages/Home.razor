@page "/"
@using Microsoft.AspNetCore.Authorization
@using ProActive2508.Models.Entity.Anja
@using ProActive2508.Components.Pages.Sabrina

@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Dashboard</h1>

<AuthorizeView>
    <Authorized>

        @if (isLoading)
        {
            <p>Lade Projekte…</p>
        }
        else if (projects is null || !projects.Any())
        {
            <div class="alert alert-info">Keine Projekte gefunden.</div>
        }
        else
        {
            <div class="row g-3">
                <div class="col-12 col-lg-8">
                    <div class="row g-3">
                        @foreach (var p in projects)
                        {
                            <div class="col-12 col-sm-6 col-md-4">
                                <div class="card h-100">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@($"Projekt #{p.Id}")</h5>
                                        <p class="card-text text-truncate" style="min-height:3rem;">@(string.IsNullOrWhiteSpace(p.Projektbeschreibung) ? "-" : p.Projektbeschreibung)</p>
                                        <div class="mt-auto d-flex justify-content-between align-items-center">
                                            <small class="text-muted">@p.Status</small>
                                            <a class="btn btn-sm btn-outline-primary" href="@($"/projekt/{p.Id}")">Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    @* Kompakte Aufgabenansicht für Home (minimal, + Button verhält sich wie auf der Aufgabenseite) *@
                    <div class="card h-100">
                        <div class="card-body">
                            <AufgabenCompact MaxItems="5" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <p>Please log in to access your dashboard.</p>
    </NotAuthorized>
</AuthorizeView>