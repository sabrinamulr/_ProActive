@page "/meine-projekte"
@using Microsoft.AspNetCore.Authorization
@using ProActive2508.Models.Entity.Anja
@rendermode InteractiveServer

<h3>Projekte</h3>

@if (!string.IsNullOrWhiteSpace(uiError))
{
    <div class="alert alert-warning d-flex justify-content-between align-items-start" role="alert">
        <div><strong>Fehler:</strong> @uiError</div>
        <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="() => uiError = null">OK</button>
    </div>
}

@if (isLoading)
{
    <p>Lade…</p>
}
else if (projects is null || !projects.Any())
{
    <div class="alert alert-info">Keine Projekte vorhanden.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th style="width:70px;">Id</th>
                    <th>Projekt</th>
                    <th style="min-width:320px;">Aktuelle Phase</th>
                    <th style="width:220px;">Projektleiter</th>
                    <th style="width:220px;">Auftraggeber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Projekt p in projects)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>
                            <a href="@($"/projekt/{p.Id}")" class="fw-semibold">@($"Projekt #{p.Id}")</a>
                            <div class="text-muted small">@p.Projektbeschreibung</div>
                        </td>
                        <td>
                            @{
                                ProjektPhase? cur = currentPhaseLookup.TryGetValue(p.Id, out ProjektPhase? c) ? c : null;
                                List<ProjektPhase> all = projectPhasesLookup.TryGetValue(p.Id, out List<ProjektPhase>? phases) ? phases : new List<ProjektPhase>();
                            }
                            @if (cur == null)
                            {
                                <div class="text-muted small">Keine aktive Phase.</div>
                            }
                            else
                            {
                                <div class="mb-2">
                                    <div class="fw-semibold">@cur.Phase?.Bezeichnung</div>
                                    <div class="small text-muted">@($"{cur.StartDate:dd.MM.yyyy} – {cur.DueDate:dd.MM.yyyy}")</div>
                                </div>

                                //Darstellung aller Phasen als Timeline, aktuelle Phase farblich hervorheben (= richtige Darstellung)
                                <div class="timeline d-flex" style="gap:6px;">
                                    @if (all == null || !all.Any())
                                    {
                                        <div class="text-muted small">Phasen fehlen.</div>
                                    }
                                    else
                                    {
                                        int segWidth = Math.Max(8, 100 / all.Count);    
                                        foreach (ProjektPhase seg in all)
                                        {
                                            bool isCurrent = cur != null && seg.Id == cur.Id;
                                            string segStyle = $"flex:0 0 {segWidth}%; height:12px; border-radius:4px; background:{(isCurrent ? "#0d6efd" : "#e9ecef")};";
                                            string segTitle = $"{seg.Phase?.Kurzbezeichnung} {seg.StartDate:dd.MM}→{seg.DueDate:dd.MM}";
                                            <div style="@segStyle" title="@segTitle"></div>
                                        }
                                    }
                                </div>
                            }
                        </td>
                        <td>@(userLookup.TryGetValue(p.ProjektleiterId, out string? pl) ? pl : $"Id:{p.ProjektleiterId}")</td>
                        @*<td>@(userLookup.TryGetValue(p.AuftraggeberId, out string? ag) ? ag : $"Id:{p.AuftraggeberId}")</td>*@
                        <td>
                            @if (CanEdit(p))
                            {
                                <a class="btn btn-sm btn-outline-primary" href="@($"/projekt/{p.Id}")">Details</a>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary" disabled>Ansicht</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

