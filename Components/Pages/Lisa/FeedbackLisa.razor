@page "/feedback-lisa/{ProjektId:int}"
@namespace ProActive2508.Components.Pages.Lisa
@rendermode InteractiveServer

@using ProActive2508.Models.Entity.Anja
@using ProActive2508.Service
@using ProActive2508.Data
@using Microsoft.EntityFrameworkCore
@inject Umfrage FeedbackService
@inject AppDbContext _context
@inject NavigationManager Nav


<h2>Projektfeedback</h2>

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <p style="color: red; font-weight: bold;">@StatusMessage</p>
}

@if (Kategorien.Count > 0)
{
    var category = Kategorien[AktuelleKategorieIndex];

    <h3>@category.Name</h3>

    <div class="category-box">
        @foreach (var frage in category.Fragen)
        {
            <div class="frage">
                <p>@frage.Text</p>

                <input type="range"
                       min="1"
                       max="5"
                       value="@Antworten[frage.Id]"
                       @oninput="e => OnSliderChanged(e, frage.Id)" />

                <span class="ms-2 fw-bold">@Antworten[frage.Id]</span>
            </div>
        }
    </div>

    <div class="button-row">
        @if (AktuelleKategorieIndex > 0)
        {
            <button class="btn btn-secondary me-2" @onclick="Zurueck">
                Zurück
            </button>
        }

        @if (AktuelleKategorieIndex < Kategorien.Count - 1)
        {
            <button class="btn btn-primary" @onclick="Weiter">
                Weiter
            </button>
        }
        else
        {
            <button class="btn btn-success"
                    @onclick="SubmitFeedback"
                    disabled="@IsSubmitted">
                Feedback absenden
            </button>
        }
    </div>
}

<style>
    h2 {
        margin-bottom: 20px;
    }

    .category-box {
        margin-bottom: 30px;
        padding: 15px;
        background: #f5f5f5;
        border-radius: 8px;
    }

    .frage {
        margin-bottom: 15px;
    }

    .button-row {
        margin-top: 20px;
    }
</style>

@code {

    [Parameter] public int ProjektId { get; set; }

    private string? StatusMessage;
    private List<UmfrageKategorie> Kategorien = new();
    private Dictionary<int, int> Antworten = new();
    private int AktuelleKategorieIndex = 0;
    private bool IsSubmitted = false;

    protected override async Task OnInitializedAsync()
    {
        // Prüfen, ob dieses Projekt schon Feedback abgegeben hat
        bool hatFeedback = await _context.Antworten
            .AnyAsync(f => f.ProjektId == ProjektId);

        if (hatFeedback)
        {
            Nav.NavigateTo("/feedback-danke");
            return;
        }

        try
        {
            Kategorien = await FeedbackService.GetKategorienAsync();

            foreach (var kat in Kategorien)
            {
                foreach (var frage in kat.Fragen)
                {
                    Antworten[frage.Id] = 3;
                }
            }
        }
        catch (Exception ex)
        {
            StatusMessage = "FEHLER in OnInitializedAsync: " + ex.Message;
        }
    }

    private void Weiter()
    {
        if (AktuelleKategorieIndex < Kategorien.Count - 1)
            AktuelleKategorieIndex++;
    }

    private void Zurueck()
    {
        if (AktuelleKategorieIndex > 0)
            AktuelleKategorieIndex--;
    }

    private void OnSliderChanged(ChangeEventArgs e, int frageId)
    {
        int value = int.Parse(e.Value?.ToString() ?? "3");
        Antworten[frageId] = value;
    }

    private async Task SubmitFeedback()
    {
        try
        {
            if (IsSubmitted)
                return;

            IsSubmitted = true;

            foreach (var kvp in Antworten)
            {
                var antwort = new Antwort
                {
                    FrageId = kvp.Key,
                    Rating = kvp.Value,
                    ProjektId = ProjektId,
                    Datum = DateTime.Now
                };

                _context.Antworten.Add(antwort);
            }

            await _context.SaveChangesAsync();
            Nav.NavigateTo("/feedback-danke");
        }
        catch (Exception ex)
        {
            StatusMessage = "Fehler beim Speichern: " + ex.Message;
            IsSubmitted = false;
        }
    }
}