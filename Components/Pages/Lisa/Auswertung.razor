@page "/auswertung"

@using ProActive2508.Data
@using ProActive2508.Models.Entity.Anja
@using Microsoft.EntityFrameworkCore
@inject AppDbContext _context
@inject IJSRuntime JS

<h2>Auswertung – Testmodus (Projekt 1)</h2>

@if (isLoading)
{
    <p>Lade Daten…</p>
}
else
{
    @if (aktuellesProjekt != null)
    {
        <h3>@aktuellesProjekt.Projektbeschreibung</h3>

        <p><strong>Status:</strong> @aktuellesProjekt.Status</p>

        <canvas id="ratingChart" width="400" height="200"></canvas>

        <h4 class="mt-4">Alle Antworten</h4>

        @if (antworten is not null && antworten.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Frage</th>
                        <th>Sterne</th>
                        <th>Datum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in antworten)
                    {
                        <tr>
                            <td>@a.FrageId</td>
                            <td>@a.Rating</td>
                            <td>@(a.Datum == default ? "-" : a.Datum.ToString("dd.MM.yyyy HH:mm"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Keine Antworten vorhanden.</p>
        }
    }
}

@code {
    private bool isLoading = true;
    private Projekt? aktuellesProjekt;
    private List<Antwort> antworten = new();

    // Test: Nur Projekt 1
    private int selectedProjectId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LadeAuswertung();
        isLoading = false;
    }

    private async Task LadeAuswertung()
    {
        Console.WriteLine("LadeAuswertung gestartet");

        try
        {
            Console.WriteLine("Lade Projekt...");
            aktuellesProjekt = await _context.Projekte
                .AsNoTracking()
                .FirstOrDefaultAsync(p => p.Id == selectedProjectId);
            Console.WriteLine("Projekt geladen");

            Console.WriteLine("Lade Antworten...");
            antworten = await _context.Antworten
                .AsNoTracking()
                .Where(a => a.ProjektId == selectedProjectId)
                .ToListAsync();
            Console.WriteLine("Antworten geladen");

            Console.WriteLine("Berechne Counts...");
            var counts = new int[5];
            foreach (var a in antworten)
            {
                if (a.Rating >= 1 && a.Rating <= 5)
                    counts[a.Rating - 1]++;
            }
            Console.WriteLine("Counts berechnet");

            Console.WriteLine("Rufe JS auf...");
            await JS.InvokeVoidAsync("renderRatingChart", counts);
            Console.WriteLine("JS wurde aufgerufen");
        }
        catch (Exception ex)
        {
            Console.WriteLine("FEHLER in LadeAuswertung:");
            Console.WriteLine(ex.ToString());
        }
    }
}