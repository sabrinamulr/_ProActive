@page "/auswertung"

@using ProActive2508.Data
@using ProActive2508.Models.Entity.Anja
@using Microsoft.EntityFrameworkCore
@using Radzen
@using Radzen.Blazor

@inject AppDbContext _context

<h2>Auswertung – Testmodus (Projekt 1)</h2>

@if (isLoading)
{
    <p>Lade Daten…</p>
}
else
{
    @if (aktuellesProjekt != null)
    {
        <h3>@aktuellesProjekt.Projektbeschreibung</h3>

        <p><strong>Status:</strong> @aktuellesProjekt.Status</p>

        @if (antworten.Count > 0)
        {
            <RadzenChart Style="height:300px; width:600px;">
                <RadzenColumnSeries Data="@ratingItems"
                                    CategoryProperty="Category"
                                    ValueProperty="Value"
                                    Title="Bewertungen" />
            </RadzenChart>

            <h4 class="mt-4">Alle Antworten</h4>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Frage</th>
                        <th>Sterne</th>
                        <th>Datum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in antworten)
                    {
                        <tr>
                            <td>@a.FrageId</td>
                            <td>@a.Rating</td>
                            <td>@(a.Datum == default ? "-" : a.Datum.ToString("dd.MM.yyyy HH:mm"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Keine Antworten vorhanden.</p>
        }
    }
    else
    {
        <p>Projekt nicht gefunden.</p>
    }
}

@code {
    private bool isLoading = true;

    private Projekt? aktuellesProjekt;
    private List<Antwort> antworten = new();

    private int selectedProjectId = 1; // Testprojekt

    private List<RatingItem> ratingItems = new();

    private class RatingItem
    {
        public string Category { get; set; } = "";
        public int Value { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LadeAuswertung();
        isLoading = false;
    }

    private async Task LadeAuswertung()
    {
        // Projekt laden
        aktuellesProjekt = await _context.Projekte
            .AsNoTracking()
            .FirstOrDefaultAsync(p => p.Id == selectedProjectId);

        if (aktuellesProjekt == null)
            return;

        // Antworten laden
        antworten = await _context.Antworten
            .AsNoTracking()
            .Where(a => a.ProjektId == selectedProjectId)
            .ToListAsync();

        // Ratings zählen
        var counts = new int[5];
        foreach (var a in antworten)
        {
            if (a.Rating >= 1 && a.Rating <= 5)
                counts[a.Rating - 1]++;
        }

        // Für RadzenChart vorbereiten
        ratingItems = new()
        {
            new RatingItem { Category = "1 Stern", Value = counts[0] },
            new RatingItem { Category = "2 Sterne", Value = counts[1] },
            new RatingItem { Category = "3 Sterne", Value = counts[2] },
            new RatingItem { Category = "4 Sterne", Value = counts[3] },
            new RatingItem { Category = "5 Sterne", Value = counts[4] }
        };
    }
}