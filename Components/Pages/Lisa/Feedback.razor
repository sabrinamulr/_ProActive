@page "/feedback/{ProjektId:int}"
@namespace ProActive2508.Components.Pages.Lisa
@rendermode InteractiveServer

@using ProActive2508.Models.Entity.Anja
@using ProActive2508.Service
@using ProActive2508.Data
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@inject Umfrage FeedbackService
@inject AppDbContext _context
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<h2>Projektfeedback</h2>

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <p style="color: red; font-weight: bold;">@StatusMessage</p>
}

@if (Kategorien.Count > 0)
{
    UmfrageKategorie aktuelleKategorie = Kategorien[AktuelleKategorieIndex];

    <h3>@aktuelleKategorie.Name</h3>

    <div class="category-box">
        @foreach (Frage frage in aktuelleKategorie.Fragen)
        {
            <div class="frage">
                <p>@frage.Text</p>

                <input type="range"
                       min="1"
                       max="5"
                       value="@Antworten[frage.Id]"
                       @oninput="@(args => SliderGeaendert(args, frage.Id))" />

                <span class="ms-2 fw-bold">@Antworten[frage.Id]</span>
            </div>
        }
    </div>

    <div class="button-row">
        @if (AktuelleKategorieIndex > 0)
        {
            <button class="btn btn-secondary me-2" @onclick="Zurueck">
                Zurück
            </button>
        }

        @if (AktuelleKategorieIndex < Kategorien.Count - 1)
        {
            <button class="btn btn-primary" @onclick="Weiter">
                Weiter
            </button>
        }
        else
        {
            <button class="btn btn-success"
                    @onclick="FeedbackAbsenden"
                    disabled="@IsSubmitted">
                Feedback absenden
            </button>
        }
    </div>
}

<style>
    h2 {
        margin-bottom: 20px;
    }

    .category-box {
        margin-bottom: 30px;
        padding: 15px;
        background: #f5f5f5;
        border-radius: 8px;
    }

    .frage {
        margin-bottom: 15px;
    }

    .button-row {
        margin-top: 20px;
    }
</style>

@code {

    [Parameter] public int ProjektId { get; set; }

    private string StatusMessage;
    private List<UmfrageKategorie> Kategorien = new List<UmfrageKategorie>();
    private Dictionary<int, int> Antworten = new Dictionary<int, int>();
    private int AktuelleKategorieIndex = 0;
    private bool IsSubmitted = false;
    private int AktuellerBenutzerId = 0;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal benutzer = authState.User;

        if (!benutzer.Identity.IsAuthenticated)
        {
            StatusMessage = "Nicht angemeldet. Bitte erneut anmelden.";
            return;
        }

        // Benutzer-ID direkt auslesen (ohne extra Funktion)
        var benutzerIdClaim = benutzer.FindFirst(ClaimTypes.NameIdentifier);
        AktuellerBenutzerId = Convert.ToInt32(benutzerIdClaim.Value);

        if (AktuellerBenutzerId <= 0)
        {
            StatusMessage = "Benutzer konnte nicht ermittelt werden.";
            return;
        }

        // Prüfen, ob bereits Feedback existiert (ohne Lambda)
        bool hatFeedback = false;

        List<Antwort> alleAntworten = await _context.Antworten
            .Where(a => a.ProjektId == ProjektId)
            .ToListAsync();

        foreach (Antwort antwort in alleAntworten)
        {
            if (antwort.BenutzerId == AktuellerBenutzerId)
            {
                hatFeedback = true;
                break;
            }
        }

        if (hatFeedback)
        {
            Nav.NavigateTo("/feedback-danke");
            return;
        }

        try
        {
            Kategorien = await FeedbackService.GetKategorienAsync();

            foreach (UmfrageKategorie kategorie in Kategorien)
            {
                foreach (Frage frage in kategorie.Fragen)
                {
                    Antworten[frage.Id] = 3;
                }
            }
        }
        catch (Exception ex)
        {
            StatusMessage = "Fehler beim Laden: " + ex.Message;
        }
    }

    private void Weiter()
    {
        if (AktuelleKategorieIndex < Kategorien.Count - 1)
        {
            AktuelleKategorieIndex++;
        }
    }

    private void Zurueck()
    {
        if (AktuelleKategorieIndex > 0)
        {
            AktuelleKategorieIndex--;
        }
    }

    private void SliderGeaendert(ChangeEventArgs args, int frageId)
    {
        Antworten[frageId] = Convert.ToInt32(args.Value);
    }

    private async Task FeedbackAbsenden()
    {
        if (IsSubmitted)
            return;

        IsSubmitted = true;

        try
        {
            foreach (var eintrag in Antworten)
            {
                int frageId = eintrag.Key;
                int wert = eintrag.Value;

                Antwort antwort = new Antwort();
                antwort.FrageId = frageId;
                antwort.Rating = wert;
                antwort.ProjektId = ProjektId;
                antwort.BenutzerId = AktuellerBenutzerId;
                antwort.Datum = DateTime.Now;

                _context.Antworten.Add(antwort);
            }

            await _context.SaveChangesAsync();
            Nav.NavigateTo("/feedback-danke");
        }
        catch (Exception ex)
        {
            StatusMessage = "Fehler beim Speichern: " + ex.Message;
            IsSubmitted = false;
        }
    }
}