@page "/feedback"
@using ProActive2508.Models.Lisa
@using ProActive2508.Service
@inject Umfrage FeedbackService

<h2>Projektfeedback</h2>

@foreach (var category in Categories)
{
    <h3>@category.Name</h3>

    <div class="category-box">
        @foreach (var question in category.Questions)
        {
            <div class="question-box">
                <p>@question.Text</p>
                <input type="range" min="1" max="5" value="3" />
            </div>
        }
    </div>
}

<style>
    h2 {
        margin-bottom: 20px;
    }

    .category-box {
        margin-bottom: 30px;
        padding: 15px;
        background: #f5f5f5;
        border-radius: 8px;
    }

    .question-box {
        margin-bottom: 15px;
    }
</style>

@code {
    List<ProjektUmfrage> Categories = new();

    protected override void OnInitialized()
    {
        Categories = FeedbackService.GetKat();
    }
}