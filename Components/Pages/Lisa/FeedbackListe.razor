@page "/feedback-liste"
@using ProActive2508.Data
@using ProActive2508.Models.Entity.Anja
@using Microsoft.EntityFrameworkCore
@inject AppDbContext _context
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<h2>Feedback abgeben</h2>

@if (isLoading)
{
    <p>Lade Projekte…</p>
}
else if (projekte is null || !projekte.Any())
{
    <div class="alert alert-info">Keine erledigten Projekte gefunden.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Projekt</th>
                <th>Status</th>
                <th>Feedback</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Projekt p in projekte)
            {
                <tr>
                    <td>@p.Projektbeschreibung</td>
                    <td>@p.Status</td>
                    <td>
                        @if (p.Antworten.Any(a => a.BenutzerId == aktuellerBenutzerId))
                        {
                            <span class="text-success fw-bold">Feedback abgegeben</span>
                        }
                        else
                        {
                            <button class="btn btn-primary"
                                    @onclick="@(() => StartFeedback(p.Id))">
                                Feedback abgeben
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool isLoading = true;
    private List<Projekt>? projekte;
    private int aktuellerBenutzerId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (!user.Identity?.IsAuthenticated ?? true)
        {
            isLoading = false;
            return;
        }

        var userIdClaim = user.Claims.FirstOrDefault(c => c.Type.Contains("nameidentifier"));
        if (userIdClaim == null)
        {
            isLoading = false;
            return;
        }

        aktuellerBenutzerId = int.Parse(userIdClaim.Value);

        // 🔥 WICHTIG: Projekte über ProjektBenutzer laden, NICHT über Projektleiter
        projekte = await _context.Projekte
            .Where(p =>
                p.Status == Projektstatus.Abgeschlossen &&
                _context.ProjektBenutzer.Any(pb =>
                    pb.ProjektId == p.Id &&
                    pb.BenutzerId == aktuellerBenutzerId
                )
            )
            .Include(p => p.Antworten)
            .ToListAsync();

        isLoading = false;
    }

    private void StartFeedback(int projektId)
    {
        Nav.NavigateTo($"/feedback/{projektId}");
    }
}