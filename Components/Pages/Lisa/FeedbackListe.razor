@page "/feedback-liste"
@using ProActive2508.Data
@using ProActive2508.Models.Entity.Anja
@using Microsoft.EntityFrameworkCore
@inject AppDbContext _context
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer
@using System.Security.Claims


<h2>Feedback abgeben</h2>

@if (isLoading)
{
    <p>Lade Projekte…</p>
}
else if (projekte == null || projekte.Count == 0)
{
    <div class="alert alert-info">Keine erledigten Projekte gefunden.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Projekt</th>
                <th>Status</th>
                <th>Feedback</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Projekt p in projekte)
            {
                bool hatFeedback = false;

                foreach (Antwort a in p.Antworten)
                {
                    if (a.BenutzerId == currentUserId)
                    {
                        hatFeedback = true;
                        break;
                    }
                }

                <tr>
                    <td>@p.Projektbeschreibung</td>
                    <td>@p.Status</td>
                    <td>
                        @if (hatFeedback)
                        {
                            <span class="text-success fw-bold">Feedback abgegeben</span>
                        }
                        else
                        {
                            <button class="btn btn-primary"
                                    @onclick="@(() => StartFeedback(p.Id))">
                                Feedback abgeben
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    bool isLoading = true;
    List<Projekt> projekte;
    int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal benutzer = authState.User;

        if (!benutzer.Identity.IsAuthenticated)
        {
            isLoading = false;
            return;
        }

        // Benutzer-ID holen
        var benutzerIdClaim = benutzer.FindFirst(ClaimTypes.NameIdentifier);
        if (benutzerIdClaim == null)
        {
            isLoading = false;
            return;
        }

        currentUserId = Convert.ToInt32(benutzerIdClaim.Value);

        // Projekte laden
        var alleProjekte = await _context.Projekte
            .Include(p => p.Antworten)
            .ToListAsync();

        projekte = new List<Projekt>();

        foreach (Projekt projekt in alleProjekte)
        {
            bool Abgeschlossen = projekt.Status == Projektstatus.Abgeschlossen;
            bool Benutzer = projekt.BenutzerId == currentUserId;

            if (Abgeschlossen && Benutzer)
            {
                projekte.Add(projekt);
            }
        }

        isLoading = false;
    }

    private void StartFeedback(int projektId)
    {
        Nav.NavigateTo("/feedback/" + projektId);
    }
}