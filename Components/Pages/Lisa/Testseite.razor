@page "/testdropdown"

<h2>TEST DROPDOWN</h2>

<select @bind="selectedProjectIdString" @bind:event="onchange" class="form-select" style="width:300px;">
    <option value="">-- Wählen --</option>
    <option value="1">Projekt 1</option>
    <option value="2">Projekt 2</option>
    <option value="3">Projekt 3</option>
</select>

<p>Raw: @selectedProjectIdString</p>

<button class="btn btn-primary" @onclick="TestClick">Test</button>

<p>Clicked: @clicked</p>

@code {
    private string? selectedProjectIdString;
    private bool clicked = false;

    private void TestClick()
    {
        clicked = true;
    }
}