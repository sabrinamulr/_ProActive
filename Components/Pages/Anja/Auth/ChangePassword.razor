@* Seite: ChangePassword *@
@page "/auth/changepassword"

@if (!string.IsNullOrEmpty(SuccessInfo))
{
    <div class="alert alert-success" role="alert">@SuccessInfo</div>
}

@if (!string.IsNullOrEmpty(ErrorInfo))
{
    <div class="alert alert-danger" role="alert">@ErrorInfo</div>
}

<form method="post" action="/auth/change-password" @formname="change-password" class="mt-3">
    <AntiforgeryToken />

    <div class="mb-3">
        <label for="curr" class="form-label">Aktuelles Passwort</label>
        <input id="curr" name="AktuellesPasswort" type="password" class="form-control" required autocomplete="current-password" />
    </div>

    <div class="mb-3">
        <label for="new1" class="form-label">Neues Passwort</label>
        <input id="new1" name="NeuesPasswort" type="password" class="form-control" required minlength="8" autocomplete="new-password" />
    </div>

    <div class="mb-3">
        <label for="new2" class="form-label">Neues Passwort bestätigen</label>
        <input id="new2" name="NeuesPasswortBestaetigt" type="password" class="form-control" required minlength="8" autocomplete="new-password" />
    </div>

    <button type="submit" class="btn btn-primary">Speichern</button>
</form>
