@page "/auth/login"
@using ProActive2508.Models.Anja
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<div class="login-wrapper">

    <!-- Logo -->
    <img src="Element 1.svg" alt="Logo" class="login-logo" />

    <!-- FORM beginnt -->
    <form method="post" action="/auth/login" @formname="login" class="login-form">

        <AntiforgeryToken />

        <!-- Card -->
        <div class="login-card shadow-lg p-4">

            <h3 class="text-center mb-4 text-white">Login</h3>

            @if (!string.IsNullOrEmpty(LogoutInfo))
            {
                <div class="alert alert-success" role="alert">@LogoutInfo</div>
            }

            @if (!string.IsNullOrEmpty(LoginError))
            {
                <div class="alert alert-danger" role="alert">@LoginError</div>
            }

            <div class="mb-3">
                <label for="personalnummer" class="form-label text-white">Personalnummer</label>
                <input id="personalnummer"
                       name="Personalnummer"
                       type="number"
                       class="form-control"
                       required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label text-white">Passwort</label>
                <input id="password"
                       name="Password"
                       type="password"
                       class="form-control"
                       required />
            </div>

        </div>

        <!-- Button außerhalb der Card -->
        <button type="submit" class="login-button">Login</button>

    </form>
</div>